<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp">

    <!-- Microphone Icon -->
    <ImageView
        android:id="@+id/mic_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_mic"
        android:contentDescription="@string/voice_title" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mic_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/voice_initializing"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- Command/Result Text -->
    <TextView
        android:id="@+id/command_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_text"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/command_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:visibility="visible" />

    <!-- Retry Button -->
    <Button
        android:id="@+id/retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/command_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/voice_retry"
        android:visibility="gone" />

</RelativeLayout>
